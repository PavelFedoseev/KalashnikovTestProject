<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_book_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_book_item_height"
        android:layout_margin="@dimen/item_book_margin"
        app:cardCornerRadius="@dimen/item_book_corner_radius"
        app:cardElevation="@dimen/item_book_elevation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textview_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_book_text_margin_vertical"
            android:layout_marginBottom="@dimen/item_book_text_margin_vertical"
            android:layout_marginStart="@dimen/item_book_text_margin_horizontal"
            android:layout_marginEnd="@dimen/item_book_text_margin_horizontal"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/item_book_text_size"
            tools:text="Тест"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>